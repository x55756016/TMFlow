<controls:ChildWindow  x:Class="SMT.Workflow.Platform.Designer.Dialogs.FlowTypeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:validator="clr-namespace:SMT.SaaS.FrameworkUI.Validator;assembly=SMT.SaaS.FrameworkUI"
    mc:Ignorable="d" Title="流程分类描述">

    <Grid x:Name="LayoutRoot" Margin="2" Background="White" Width="360" Height="100">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="流程分类描述:" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

        <TextBox x:Name="TypeName" Height="22" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" MaxLength="50" />
        
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right" Margin="10 10 10 0">
            <Button x:Name="btnOk" Content="确定" Width="75" Height="23" HorizontalAlignment="Right" Margin="5 0 5 0" Click="btnOk_Click" />
            <Button x:Name="btnCancel" Content="取消" Width="75" Height="23" HorizontalAlignment="Right" Click="btnCancel_Click" />
        </StackPanel>
    </Grid>
</controls:ChildWindow>
