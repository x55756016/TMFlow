                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
                                                        <Grid.RenderTransform>
                                                            <TransformGroup>
                                                                <TransformGroup.Children>
                                                                    <TransformCollection>
                                                                        <RotateTransform Angle="270" CenterY="9.5" CenterX="9.5"/>
                                                                    </TransformCollection>
                                                                </TransformGroup.Children>
                                                            </TransformGroup>
                                                        </Grid.RenderTransform>
