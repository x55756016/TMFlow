<UserControl x:Class="SMT.Workflow.Platform.Designer.Login.Login"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:control="clr-namespace:SMT.Workflow.Platform.Designer.UControls"             
    mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800">

    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <RadialGradientBrush Center="0.5,0.3" GradientOrigin="0.5,0.3">
                <GradientStop Color="#FFDDFCB0" Offset="0"/>
                <GradientStop Color="#FFB5E869" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Canvas Width="280" Height="150" VerticalAlignment="Center" Margin="299,-120,221,0">
            <TextBlock Text="SMT Flow" Foreground="Black" FontSize="18" Canvas.Left="42" Canvas.Top="8" FontWeight="Bold"/>
            <TextBlock Text="流程设计工具" Foreground="#FF6DCC0D" Canvas.Left="133" Canvas.Top="13"/>
            <TextBox x:Name="txtUserId" Width="210" Height="22" Canvas.Left="20" Canvas.Top="48" Text="smtwangl"></TextBox>
            <PasswordBox x:Name="txtPassword" Width="210" Height="22" Canvas.Left="20" Canvas.Top="75" Password="wl1122" />
            
            <Button x:Name="btnLogin" Content="登 录" Width="70" Height="24" Canvas.Left="134" Canvas.Top="115" Click="btnLogin_Click"/>
        </Canvas>

        <control:ProgressBar x:Name="pBar" Grid.Row="0"></control:ProgressBar>
    </Grid>
</UserControl>

