<UserControl x:Class="SMT.Workflow.Platform.Designer.DesignerControl.LineControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:Shape="clr-namespace:SMT.Workflow.Platform.Designer.DesignerShape">

    <Grid x:Name="LayoutRoot" Background="White">
        <Canvas  Name="cnContainer" Canvas.ZIndex="10" >
            <Shape:LineShape x:Name="ShapeLine" Canvas.ZIndex="80" Opacity="0.8"
                MouseLeftButtonDown="Shape_MouseLeftButtonDown" MouseLeftButtonUp="Shape_MouseLeftButtonUp">
            </Shape:LineShape>
        </Canvas>
    </Grid>
</UserControl>
