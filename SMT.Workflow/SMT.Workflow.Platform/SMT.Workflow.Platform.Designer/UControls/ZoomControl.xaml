<UserControl x:Class="SMT.Workflow.Platform.Designer.UControls.ZoomControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="120" Width="23" Background="#00000000">
    <UserControl.Resources>
        <Storyboard x:Name="enter">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Opacity)">
                <SplineDoubleKeyFrame KeyTime="00:00:00.5000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="leave">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Opacity)">
                <SplineDoubleKeyFrame KeyTime="00:00:00" Value="1"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.5000000" Value="0.5"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
    <Border Opacity="0.5" x:Name="border" BorderBrush="#FF888888" Background="#FFDDDDDD" CornerRadius="1">
        <Grid x:Name="LayoutRoot">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="text" Foreground="#FF666666" FontFamily="Arial" FontSize="7" Text="100%" 
                       IsHitTestVisible="False" HorizontalAlignment="Center" Margin="2,2,2,2"/>
            <Rectangle Grid.Row="1" Height="5" Fill="#FF888888" IsHitTestVisible="False"/>
            <Grid x:Name="slider" Grid.Row="2" Margin="0" Background="#00000000">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="27" x:Name="sliderBar" Width="3" Margin="0,0,-3,0" Stroke="#FFAAAAAA" Opacity="0.7">
                    <Rectangle.Fill>
                        <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF888888" Offset="0"/>
                            <GradientStop Color="#FFFFFFFF" Offset="0.5"/>
                            <GradientStop Color="#FF888888" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Grid.Row="0" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
                <Rectangle Grid.Row="1" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
                <Rectangle Grid.Row="2" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
                <Rectangle Grid.Row="3" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
                <Rectangle Grid.Row="4" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
                <Rectangle Grid.Row="5" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
                <Rectangle Grid.Row="6" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
                <Rectangle Grid.Row="7" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
                <Rectangle Grid.Row="8" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
                <Rectangle Grid.Row="9" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
                <Rectangle Grid.Row="10" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="11" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="12" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="13" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="14" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="15" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="16" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="17" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="17" Margin="0,-1,1,-1" Width="5" Height="20" Fill="#88888888" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="18" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="19" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="20" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="21" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="22" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="23" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="24" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="25" Margin="0,0,1,0" Width="5" Height="1" Fill="#00000000" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="26" Margin="0,0,1,0" Width="5" Height="1" Fill="#FF888888" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Polygon Opacity="0.8" Grid.Row="17" x:Name="sliderThumb" Margin="1,-3,0,-5" StrokeThickness="1" 
                         Points="0,0,15,0,18,4,15,8,0,8" VerticalAlignment="Center">
                    <Polygon.Stroke>
                        <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FF666666" Offset="1"/>
                        </LinearGradientBrush>
                    </Polygon.Stroke>
                    <Polygon.Fill>
                        <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FF666666" Offset="1"/>
                        </LinearGradientBrush>
                    </Polygon.Fill>
                </Polygon>
            </Grid>
            <Rectangle Grid.Row="3" Height="5" Fill="#FF888888" IsHitTestVisible="False"/>
            <Grid x:Name="button" Grid.Row="4" Opacity="0.4">
                <Grid.Background>
                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFFFFFF" Offset="0"/>
                        <GradientStop Color="#FF888888" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Rectangle IsHitTestVisible="False" Grid.Row="0" Margin="0,3,0,0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="2" Height="2" Stroke="#FF444444"/>
                <Rectangle IsHitTestVisible="False" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="2" Height="2" Stroke="#FF444444"/>
                <Rectangle IsHitTestVisible="False" Grid.Row="1" Grid.Column="1" Width="6" Height="4" Stroke="#FF444444"/>
                <Rectangle IsHitTestVisible="False" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="2" Height="2" Stroke="#FF444444"/>
                <Rectangle IsHitTestVisible="False" Grid.Row="2" Margin="0,0,0,3" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="2" Height="2" Stroke="#FF444444"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
